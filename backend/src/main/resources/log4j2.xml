<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <Console name="ConsoleDef" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%p] %t [%c.%M:%L] %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <!--        <Root level="info">-->
        <!--            <AppenderRef ref="Console" />-->
        <!--        </Root>-->

        <!--        <Logger name="com.test.first_maven" level="info"  additivity="false">-->
        <!--            <AppenderRef ref="ConsoleDef" />-->
        <!--        </Logger>-->

        <Root level="info">
            <AppenderRef ref="ConsoleDef" />
        </Root>
    </Loggers>
</Configuration>
